<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fitrecipes" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.OnlineRecipeManagementSystem" >
        <activity
            android:name=".Activities.VerifyOTPActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.SendOTPActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.MyRecipesActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.HomeActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activities.ProfileActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activities.AddRecipeActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activities.LoginActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activities.UpdateRecipeActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".Activities.ForgotPassword" />
        <activity android:name=".Activities.ConfirmPinPasswordAvtivity" />
        <activity android:name=".Activities.ChangePasswordActivity" />
        <activity
            android:name=".Activities.SplashActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.SignUpActivity" />
        <activity android:name=".Activities.RecipeDetailsActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>